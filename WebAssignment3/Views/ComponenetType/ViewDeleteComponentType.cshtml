@model WebAssignment3.Models.Component.ComponentType
@{
    ViewData["Title"] = "ViewDeleteComponentType";
}

<h2>ViewDeleteComponentType</h2>
<h3>Are you sure you want to delete this?</h3>
<h2>Delete a component based on its ID</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteComponentType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ComponentTypeId" class="control-label"></label>
                <input asp-for="ComponentTypeId" class="form-control" />
                <span asp-validation-for="ComponentTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn-default"><a class="menuItems" href="@Url.Action("Index", "HomePage")">Back</a></button>
</div>

